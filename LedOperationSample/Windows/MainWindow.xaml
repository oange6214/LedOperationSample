<Window
    x:Class="LedOperationSample.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LedOperationSample"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:LedOperationSample.Mvvm.Views"
    Title="MainWindow"
    Width="1280"
    Height="720"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Border d:Background="White">
        <TabControl>
            <TabItem Header="Job Overview">
                <views:JobView />
            </TabItem>
            <TabItem Header="Create Recipe">
                <views:RecipeView />
            </TabItem>
        </TabControl>
    </Border>

</Window>
